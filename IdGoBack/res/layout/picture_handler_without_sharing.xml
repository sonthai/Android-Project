<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000" >

      <ImageView
          android:id="@+id/ph_displayImage"
          android:layout_width="320dp"
          android:layout_height="415dp"
          android:layout_alignParentTop="true"
          android:layout_centerHorizontal="true" />

      <Button
          android:id="@+id/ph_backButton"
          android:layout_width="120dp"
          android:layout_height="wrap_content"
          android:layout_alignBaseline="@+id/button_savePic"
          android:layout_alignBottom="@+id/button_savePic"
          android:layout_marginLeft="29dp"
          android:layout_toRightOf="@+id/button_savePic"
          android:text="@string/string_backHome" 
          android:background="@drawable/button_shape"/>

      <Button
          android:id="@+id/button_savePic"
          android:layout_width="120dp"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
          android:layout_alignParentLeft="true"
          android:layout_marginBottom="19dp"
          android:layout_marginLeft="30dp"
          android:text="@string/save_pic" 
          android:background="@drawable/button_shape"/>

</RelativeLayout>